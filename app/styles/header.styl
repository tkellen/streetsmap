header
  z-index: 1000
  position: relative;
  box-sizing: border-box
  min-width: 480px
  background: menuColor
  border-bottom: 1px solid darken(menuColor, 25%)
  height: headerHeight
  padding: 10px 10px;
  clearfix()
  nav
    #logo
      margin: -10px 0 0 15px
      background: transparent url('/assets/img/logo.png') center no-repeat
      height: headerHeight
      display: block
      float: left
      width: 235px
