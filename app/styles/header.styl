header
  z-index: 1000
  top: 0
  position: fixed
  box-sizing: border-box
  width: 100%
  min-width: 480px
  background: menuColor
  border-bottom: 1px solid darken(menuColor, 25%)
  height: headerHeight
  padding: 10px 15px;
  clearfix()
  nav
    a.menutoggle
      box-shadow: inset 0 2px 5px 0 rgba(0, 0, 0, 0.2)
      cursor: pointer
      text-indent: -9999em
      position: relative
      background-color: #111
      display: block
      height: 26px
      width: 34px

      border-radius: 2px
      float: left

      &:after
        content: ""
        position: absolute
        left: 7px
        top: 7px
        width: 20px
        height: 2px
        background: #ccc
        box-shadow: 0 5px 0 0 #ccc,
                    0 10px 0 0 #ccc
    #logo
      margin: -10px 0 0 15px
      background: transparent url('/assets/img/logo.png') center no-repeat
      height: headerHeight
      display: block
      float: left
      width: 235px
