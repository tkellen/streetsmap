@import 'nib'
global-reset()

headerHeight = 45px
menuColor = #222

@import 'header'
@import 'sidebar'
@import 'toggleswitch'
@import 'infowindow'

body
  font-family: Lato, sans-serif
  font-size: 16px
  transition: margin .1s linear
  overflow: hidden

h1
  font-size: 22px
h2
  font-size: 20px
h3
  font-size: 18px
h4
  font-size: 16px

strong
  font-weight: bold

.map
  position: relative

a.menutoggle
  box-shadow: inset 0 2px 5px 0 rgba(0, 0, 0, 0.2)
  cursor: pointer
  text-indent: -9999em
  position: relative
  background-color: #111
  display: block
  height: 26px
  width: 34px
  border-radius: 2px
  float: left
  line-height: headerHeight

  &:after
    content: ""
    position: absolute
    left: 7px
    top: 7px
    width: 20px
    height: 2px
    background: #ccc
    box-shadow: 0 5px 0 0 #ccc,
                0 10px 0 0 #ccc
