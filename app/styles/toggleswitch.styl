.toggle
  position: relative
  width: 65px
  height: 25px
  float: right
  cursor: pointer

  input
    opacity: 0
    cursor: pointer
    position: absolute
    top: 0
    left: 0
    z-index: 6
    width: 65px
    height: 25px
    background-color: #fff
    &:checked
      & ~ .btn
        left: 35px
      & ~ .bg
        background: #809e2f

  .btn
    display: block
    position: absolute
    z-index: 4
    top: -2px
    left: 0px
    width: 29px
    height: 29px
    background: #f2f2f2
    border-radius: 2px
    box-shadow: 0 5px 5px rgba(50, 50, 50, 0.2)
    transition: left 0.15s ease

    &:after
      content: ""
      position: absolute
      left: 6px
      top: 6px
      width: 18px
      height: 18px
      box-shadow: inset 0 2px 5px 0 rgba(0, 0, 0, 0.08)
      background: #e3e3e3
      border-radius: 2px

  .labels
    position: absolute
    z-index: 2
    width: 100%
    font-family: Helvetica, sans-serif
    font-weight: bold
    font-size: 12px
    color: #eee
    text-transform: uppercase
    line-height: 26px
    &:before
      content: "On"
      position: absolute
      left: 6px

    &:after
      content: "Off"
      position: absolute
      right: 6px

  .bg
    display: block
    position: absolute
    z-index: 0
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 3px
    box-shadow: inset 0 2px 5px 0 rgba(0, 0, 0, 0.2)
    background: linear-gradient(#848484, #a2a2a2)
