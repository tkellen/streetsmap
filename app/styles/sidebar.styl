.sidebarOpen
  margin-left: 325px
  aside
    left: 0

aside
  position: absolute
  width: 325px
  left: -325px
  top: 0
  bottom: 0
  box-shadow: 0 0 5px #000
  background: darken(menuColor, 20%)
  z-index: 100
  overflow-y: scroll
  transition: left .1s linear

  .controls
    box-sizing: border-box
    height: headerHeight
    padding: 10px 10px
    h2
      float: left
      padding: 5px
      margin-left: 5px
      color: #fff
      font-size: 18px

  nav
    border-top: 1px solid #111
    ul
      border-bottom: 1px solid lighten(menuColor, 5%)

    li.route
      cursor: s-resize
      height: 25px
      line-height: 25px
      background: darken(menuColor, 10%)
      display: block
      padding: 10px 15px
      border-top: 1px solid darken(menuColor, 5%)
      border-bottom: 1px solid darken(menuColor, 25%)
      text-decoration: none
      color: #fff
      overflow: hidden
      transition: all .1s linear
      transition-property: height, background-color
      &.open
        cursor: n-resize
        height: 150px
        background: darken(menuColor, 25%)
        border-top: 1px solid darken(menuColor, 40%)
        border-bottom: 1px solid darken(menuColor, 35%)
      .subnav
        margin-top: 10px
        border: none

.icon {
  float: left;
  height: 18px
  width: 18px
  border-radius: 1px

  margin: 4px 8px 0 0px
}

