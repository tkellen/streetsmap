menuColor = #333

nav
  position: absolute
  width: 300px
  top: 0px
  left: 0px
  bottom: 0px
  box-shadow: 0 0 5px #000
  background: menuColor
  z-index: 100
  margin-left: -250px
  display: none;
  overflow-y: scroll

  ul
    border-bottom: 1px solid lighten(menuColor,5%)

  li
   height: 25px
   line-height: 25px
   background: linear-gradient(lighten(menuColor, 1%), darken(menuColor,1%))
   display: block
   padding: 10px
   border-top: 1px solid lighten(menuColor,5%)
   border-bottom: 1px solid darken(menuColor,25%)
   text-decoration: none
   text-shadow: 0 -1px 2px #000
   color: #fff
   &:hover, &:focus, &:active
     background: linear-gradient(lighten(menuColor,1%), darken(menuColor,25%))
